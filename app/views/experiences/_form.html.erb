<%= render 'shared/errors', obj: @job %>
<div class="row">
  <div class="medium-6 columns">
      <%= form_for [@resume, @job] do |f| %>
        <fieldset>
        <legend><%= create_or_update(@job) %></legend>
            <%= f.label :job_title %>
            <%= f.text_field :job_title %>
            <%= f.label :start_date %>
            <%= f.text_field :start_date %>
            <%= f.label :end_date %>
            <%= f.text_field :end_date %>
            <%= f.label :company %>
            <%= f.text_field :company %>
            <%= f.label :url %>
            <%= f.text_field :url %>
            <%= f.label :city %>
            <%= f.text_field :city %>
            <%= f.label :state %>
            <%= f.text_field :state %>
            <%= f.label :phone %>
            <%= f.text_field :phone %>
            <%= f.label :responsibilities %>
            <%= f.text_area :responsibilities %>
            <%= f.submit create_or_update(@job), class: 'button small radius' %>
        </fieldset>
      <% end %>
      <%= link_to "<i class=\"fi-arrow-left\"></i> Back".html_safe, edit_resume_path(@resume), title: "Back to Dashboard" %>
  </div>
  <div class="medium-6 columns">

    <% unless @job.new_record? || @project.nil? %>
      <h3>Projects</h3>
      <%= render @job.projects %>
      <%= render 'projects/form' %>
    <% end %>
  </div>
</div>